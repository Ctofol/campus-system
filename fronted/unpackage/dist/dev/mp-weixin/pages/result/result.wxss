
.result-page.data-v-b615976f {
  min-height: 100vh;
  background-color: #fff;
}

/* 顶部模式标题栏 */
.mode-header.data-v-b615976f {
  padding: 30rpx 20rpx;
  text-align: center;
  border-bottom: 1px solid #eee;
}
.mode-title.data-v-b615976f {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 核心数据卡片 */
.result-card.data-v-b615976f {
  margin: 20rpx;
  padding: 30rpx;
  background-color: #fafafa;
  border-radius: 16rpx;
}
/* 基础数据模块 */
.base-data.data-v-b615976f {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px dashed #ddd;
}
.base-title.data-v-b615976f {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}
/* 数据项通用样式 */
.data-item.data-v-b615976f {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  font-size: 30rpx;
}
.item-label.data-v-b615976f {
  color: #666;
  font-size: 28rpx;
}
.item-value.data-v-b615976f {
  font-weight: bold;
  color: #333;
  font-size: 28rpx;
}
.count-text.data-v-b615976f {
  font-size: 40rpx;
  color: #20C997;
}

/* 模式专属数据模块 */
.mode-data.data-v-b615976f {
  margin-top: 20rpx;
}
.mode-data-title.data-v-b615976f {
  font-size: 30rpx;
  font-weight: bold;
  color: #444;
  margin-bottom: 15rpx;
  display: block;
}
/* 状态样式 */
.success.data-v-b615976f {
  color: #20C997 !important;
}
.fail.data-v-b615976f {
  color: #d81e06 !important;
}
.tips .item-value.data-v-b615976f {
  font-weight: normal;
  color: #888;
  font-size: 26rpx;
}

/* 图表与建议 */
.bar-chart.data-v-b615976f {
  margin: 20rpx 0;
}
.bar-row.data-v-b615976f {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.bar-label.data-v-b615976f {
  width: 80rpx;
  font-size: 26rpx;
  color: #666;
}
.bar-track.data-v-b615976f {
  flex: 1;
  height: 40rpx;
  background: #f0f0f0;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  margin-right: 10rpx;
}
.bar-fill.data-v-b615976f {
  height: 100%;
  border-radius: 20rpx;
}
.user-fill.data-v-b615976f { background: #20C997;
}
.standard-fill.data-v-b615976f { background: #ddd;
}
.bar-val-in.data-v-b615976f {
  position: absolute;
  right: 10rpx;
  top: 0;
  line-height: 40rpx;
  font-size: 22rpx;
  color: #fff;
}
.bar-val-out.data-v-b615976f {
  font-size: 26rpx;
  color: #333;
}
.suggestion-box.data-v-b615976f {
  background: #eefbf7;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-top: 20rpx;
  border: 1px solid #d2f4e8;
}
.sugg-title.data-v-b615976f {
  font-size: 28rpx;
  font-weight: bold;
  color: #17a077;
  display: block;
  margin-bottom: 8rpx;
}
.sugg-text.data-v-b615976f {
  font-size: 26rpx;
  color: #555;
  line-height: 1.4;
}

/* 操作按钮区 */
.btn-group.data-v-b615976f {
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}
.save-btn.data-v-b615976f {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #20C997;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
}
.save-btn.data-v-b615976f:disabled {
  background-color: #95e1c8;
  color: #fff;
}
.back-btn.data-v-b615976f {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f5f5f5;
  color: #333;
  border: 1px solid #eee;
  border-radius: 12rpx;
  font-size: 32rpx;
}
