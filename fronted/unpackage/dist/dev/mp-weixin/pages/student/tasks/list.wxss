.container {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}
.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}
.tabs .tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding-bottom: 10rpx;
}
.tabs .tab-item.active {
  color: #20C997;
  border-bottom: 4rpx solid #20C997;
  font-weight: bold;
}
.task-list {
  height: calc(100vh - 120rpx);
}
.task-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}
.task-card .card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.task-card .card-header .title-row {
  display: flex;
  align-items: center;
}
.task-card .card-header .title-row .tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}
.task-card .card-header .title-row .tag.tag-red {
  background: #ffebee;
  color: #f44336;
}
.task-card .card-header .title-row .tag.tag-blue {
  background: #e3f2fd;
  color: #2196f3;
}
.task-card .card-header .title-row .title {
  font-size: 32rpx;
  font-weight: bold;
}
.task-card .card-header .status {
  font-size: 24rpx;
}
.task-card .card-header .text-green {
  color: #4caf50;
}
.task-card .card-header .text-gray {
  color: #9e9e9e;
}
.task-card .card-header .text-orange {
  color: #ff9800;
}
.task-card .card-body {
  margin-bottom: 20rpx;
}
.task-card .card-body .desc {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}
.task-card .card-body .meta-row {
  font-size: 24rpx;
  color: #999;
}
.task-card .card-footer {
  border-top: 1rpx solid #eee;
  padding-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
.task-card .card-footer .action-btn {
  background: #20C997;
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  margin: 0;
}
.task-card .card-footer .completed-text {
  color: #4caf50;
  font-size: 24rpx;
}
.task-card .card-footer .expired-text {
  color: #999;
  font-size: 24rpx;
}
.no-more {
  text-align: center;
  color: #999;
  padding: 40rpx;
}