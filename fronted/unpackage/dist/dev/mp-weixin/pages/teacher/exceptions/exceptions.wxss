.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 20rpx;
}
.header {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.header .page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.header .stats-row {
  display: flex;
  gap: 40rpx;
}
.header .stats-row .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header .stats-row .stat-item .stat-num {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}
.header .stats-row .stat-item .stat-desc {
  font-size: 22rpx;
  color: #999;
}
.filter-bar {
  display: flex;
  margin-bottom: 20rpx;
  background: #fff;
  padding: 10rpx;
  border-radius: 12rpx;
}
.filter-bar .filter-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s;
}
.filter-bar .filter-item.active {
  background: #e6f7ff;
  color: #1890ff;
  font-weight: 500;
}
.alert-list {
  padding-bottom: 40rpx;
}
.alert-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
.alert-card .card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}
.alert-card .card-header .header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.alert-card .card-header .header-left .type-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  color: #fff;
}
.alert-card .card-header .header-left .type-tag.tag-red {
  background: #ff4d4f;
}
.alert-card .card-header .header-left .type-tag.tag-orange {
  background: #faad14;
}
.alert-card .card-header .header-left .type-tag.tag-blue {
  background: #1890ff;
}
.alert-card .card-header .header-left .student-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}
.alert-card .card-header .header-left .student-id {
  font-size: 24rpx;
  color: #999;
}
.alert-card .card-header .time {
  font-size: 24rpx;
  color: #999;
}
.alert-card .card-body {
  margin-bottom: 24rpx;
}
.alert-card .card-body .data-row {
  margin-bottom: 16rpx;
  font-size: 28rpx;
}
.alert-card .card-body .data-row .label {
  color: #666;
}
.alert-card .card-body .data-row .value {
  color: #333;
  font-weight: 500;
}
.alert-card .card-body .data-row .value.highlight {
  color: #ff4d4f;
}
.alert-card .card-body .data-row .standard {
  color: #999;
  font-size: 24rpx;
}
.alert-card .card-body .desc-box {
  background: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
}
.alert-card .card-body .desc-box .desc-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}
.alert-card .card-body .desc-box .desc-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}
.alert-card .card-footer {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}
.alert-card .card-footer .action-btn {
  margin: 0;
  font-size: 24rpx;
  padding: 0 30rpx;
  border-radius: 30rpx;
  background: #fff;
}
.alert-card .card-footer .action-btn.ignore {
  color: #999;
  border: 1px solid #ddd;
}
.alert-card .card-footer .action-btn.notify {
  color: #1890ff;
  border: 1px solid #1890ff;
}
.alert-card .card-footer .action-btn.handle {
  background: #20C997;
  color: #fff;
  border: none;
}
.empty-state {
  padding: 60rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}