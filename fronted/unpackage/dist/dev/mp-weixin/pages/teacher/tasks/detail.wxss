.container {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}
.card-base, .section-card, .header-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.header-card .title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.header-card .title-row .task-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.header-card .title-row .status-tag {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}
.header-card .title-row .status-tag.ongoing {
  background: #e6f7ff;
  color: #1890ff;
}
.header-card .title-row .status-tag.ended {
  background: #f5f5f5;
  color: #999;
}
.header-card .due-date {
  font-size: 26rpx;
  color: #666;
}
.section-card .section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.section-card .section-header .section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  position: relative;
  padding-left: 20rpx;
}
.section-card .section-header .section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 28rpx;
  background: #20C997;
  border-radius: 3rpx;
}
.section-card .section-header .progress-stats {
  font-size: 28rpx;
  color: #666;
}
.requirements-list .req-item {
  display: flex;
  margin-bottom: 12rpx;
}
.requirements-list .req-item .dot {
  color: #20C997;
  margin-right: 12rpx;
}
.requirements-list .req-item .req-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.5;
}
.progress-box .progress-bar {
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}
.progress-box .progress-bar .progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #20C997, #17a2b8);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}
.progress-box .percentage-text {
  font-size: 24rpx;
  color: #999;
  display: block;
  text-align: right;
}
.filter-tabs {
  display: flex;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 4rpx;
}
.filter-tabs .tab-item {
  padding: 6rpx 20rpx;
  font-size: 24rpx;
  color: #666;
  border-radius: 6rpx;
}
.filter-tabs .tab-item.active {
  background: #fff;
  color: #20C997;
  font-weight: 500;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}
.student-list {
  max-height: 600rpx;
}
.student-list .student-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f0f0f0;
}
.student-list .student-item:last-child {
  border-bottom: none;
}
.student-list .student-item .student-info {
  display: flex;
  align-items: center;
}
.student-list .student-item .student-info .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #eee;
  margin-right: 20rpx;
}
.student-list .student-item .student-info .info-col {
  display: flex;
  flex-direction: column;
}
.student-list .student-item .student-info .info-col .name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
.student-list .student-item .student-info .info-col .id {
  font-size: 24rpx;
  color: #999;
}
.student-list .student-item .student-info .info-col .metric-val {
  font-size: 24rpx;
  color: #20C997;
  margin-top: 4rpx;
}
.student-list .student-item .status-col {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.student-list .student-item .status-col .status-text {
  font-size: 26rpx;
  margin-bottom: 8rpx;
}
.student-list .student-item .status-col .status-text.completed {
  color: #20C997;
}
.student-list .student-item .status-col .status-text.uncompleted {
  color: #ff4d4f;
}
.student-list .student-item .status-col .remind-btn {
  margin: 0;
  padding: 0 20rpx;
  height: 48rpx;
  line-height: 48rpx;
  font-size: 24rpx;
  background: #fff;
  color: #ff4d4f;
  border: 1px solid #ff4d4f;
}
.student-list .student-item .status-col .remind-btn:active {
  background: #fff1f0;
}